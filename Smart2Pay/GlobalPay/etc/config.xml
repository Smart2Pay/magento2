                <signature_test><![CDATA[]]></signature_test>
                <return_url><![CDATA[]]></return_url>
                <skin_id>0</skin_id>
                <debug_form>0</debug_form>
                <sort_order>0</sort_order>

                <display_surcharge>0</display_surcharge>
                <display_mode>both</display_mode>
                <show_methods_in_grid>0</show_methods_in_grid>
                <grid_column_number>3</grid_column_number>
                <product_description_ref>1</product_description_ref>
                <product_description_custom><![CDATA[]]></product_description_custom>

                <notify_customer>0</notify_customer>
                <smart2pay_email_payment_confirmation>smart2pay_email_payment_confirmation</smart2pay_email_payment_confirmation>
                <notify_payment_instructions>0</notify_payment_instructions>
