<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Store/etc/config.xsd">
    <default>
        <payment>
            <smart2pay>

                <model>Smart2Pay\GlobalPay\Model\Smart2Pay</model>

                <active>1</active>
                <title><![CDATA[Smart2Pay - Alternative payment methods]]></title>
                <environment>demo</environment>
                <post_url_live><![CDATA[https://api.smart2pay.com]]></post_url_live>
                <post_url_test><![CDATA[https://apitest.smart2pay.com]]></post_url_test>
                <mid_live>0</mid_live>
                <mid_test>0</mid_test>
                <site_id>0</site_id>
