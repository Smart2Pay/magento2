                <order_status_on_3>smart2pay_canceled</order_status_on_3>
                <order_status_on_4>smart2pay_failed</order_status_on_4>
                <order_status_on_5>smart2pay_expired</order_status_on_5>

                <skip_payment_page>1</skip_payment_page>
